@model Final_Project.Models.Profile

@{
    ViewData["Title"] = "Delete Profile";
}
<link rel="stylesheet" href="~/css/res.css">

<div class="container py-5 d-flex flex-column align-items-center">
    <div class="delete-card shadow rounded-4 p-4 text-center" style="max-width: 480px; width: 100%; background: #fff8f0; border: 1px solid #d6b89f;">
        <h2 class="mb-3 text-danger"><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h2>

        <div class="alert alert-warning py-3" role="alert" style="font-weight: 600; font-size: 1.1rem;">
            Are you sure you want to delete this profile?
        </div>

        <div class="text-start mb-4">
            <p><strong>Username:</strong> <span class="text-muted">@Model.Username</span></p>
            <p><strong>Gender:</strong> <span class="text-muted">@Model.Gender</span></p>
            <p><strong>Date of Birth:</strong> <span class="text-muted">@Model.DateOfBirth?.ToString("yyyy-MM-dd") </span></p>
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-center gap-3">
            <input type="hidden" name="id" value="@Model.ProfileID" />
            <button type="submit" class="btn btn-danger btn-lg px-4 shadow-sm">
                <i class="fas fa-trash-alt me-2"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 shadow-sm">
                <i class="fas fa-times me-2"></i> Cancel
            </a>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #fef7f0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .delete-card {
        border-radius: 1rem;
        box-shadow: 0 6px 18px rgba(160, 82, 45, 0.15);
    }

    .btn-danger {
        background-color: #A0522D;
        border-color: #A0522D;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #8B4513;
            border-color: #8B4513;
        }

    .btn-outline-secondary {
        border-radius: 0.35rem;
        font-weight: 600;
    }
</style>
