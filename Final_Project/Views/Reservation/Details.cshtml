@model Final_Project.ViewModels.MakeReservation

@{
    ViewData["Title"] = "Details";
    Layout = null; // Remove default layout to exclude the sidebar
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Reservation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* Page background with restaurant image */
        body {
            background-image: url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=1920&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            min-height: 100vh;
            margin: 0;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            font-family: 'Georgia', serif; /* Elegant serif font */
        }

            /* Subtle overlay for twilight glow effect */
            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 100%); /* Gradient overlay */
                z-index: 1;
            }

        /* Enhanced card container with gradient and shadow */
        .card-container {
            background: linear-gradient(135deg, #ffffff 0%, #f9f1e7 100%); /* Soft ivory gradient */
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 1200px;
            position: relative;
            z-index: 2;
            margin-bottom: 2rem;
            border: 2px solid #d4a373; /* Warm gold border */
            overflow: hidden;
        }

            /* Yellow zigzag border effect with refinement */
            .card-container::before {
                content: '';
                position: absolute;
                top: -15px;
                left: -15px;
                right: -15px;
                height: 30px;
                background: linear-gradient(45deg, #d4a373 25%, transparent 25%, transparent 50%, #d4a373 50%, #d4a373 75%, transparent 75%, transparent);
                background-size: 40px 40px;
                z-index: 3;
            }

            .card-container::after {
                content: '';
                position: absolute;
                bottom: -15px;
                left: -15px;
                right: -15px;
                height: 30px;
                background: linear-gradient(45deg, #d4a373 25%, transparent 25%, transparent 50%, #d4a373 50%, #d4a373 75%, transparent 75%, transparent);
                background-size: 40px 40px;
                z-index: 3;
            }

        /* Enhanced card title and breadcrumb */
        .card-title {
            color: #2f4f4f; /* Dark slate gray for elegance */
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            position: relative;
        }

            .card-title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 50px;
                height: 3px;
                background: #d4a373;
            }

        .breadcrumb {
            background: transparent;
            padding: 0;
            margin-bottom: 1.5rem;
        }

        .breadcrumb-item a {
            color: #d4a373;
            text-decoration: none;
        }

            .breadcrumb-item a:hover {
                color: #8b4513;
            }

        .breadcrumb-item.active {
            color: #2f4f4f;
        }

        /* Card body styling */
        .card-body {
            padding: 1.5rem;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            margin-bottom: 1rem;
        }

        dt {
            color: #2f4f4f;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        dd {
            color: #2f4f4f;
            margin-bottom: 1rem;
            padding-left: 1rem;
            border-left: 2px solid #d4a373;
        }

        /* Card footer styling */
        .card-footer {
            padding: 1rem;
            background: transparent;
            border-top: none;
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            justify-content: flex-start;
        }

        /* Button styling */
        .btn-primary, .btn-warning, .btn-danger, .btn-secondary {
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .btn-primary {
            background: linear-gradient(135deg, #d4a373 0%, #8b4513 100%);
            border: none;
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(139, 69, 19, 0.4);
            }

        .btn-warning {
            background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
            border: none;
            color: white;
        }

            .btn-warning:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(255, 193, 7, 0.4);
            }

        .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            color: white;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
            }

        .btn-secondary {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            border: none;
            color: white;
        }

            .btn-secondary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(73, 80, 87, 0.4);
            }

        /* Modal styling */
        .modal-content {
            background: linear-gradient(135deg, #ffffff 0%, #f9f1e7 100%);
            border: 2px solid #d4a373;
            border-radius: 15px;
        }

        .modal-header {
            border-bottom: 2px solid #d4a373;
        }

        .modal-footer {
            border-top: 2px solid #d4a373;
        }
    </style>
</head>
<body>
    <div class="card-container">
        <h2 class="card-title">Reservation Details</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("ShowAllReservations")">All Reservations</a></li>
                <li class="breadcrumb-item active" aria-current="page">Details</li>
            </ol>
        </nav>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-bold">Customer ID</dt>
                <dd class="col-sm-8">@Model.CustomerID</dd>
                <dt class="col-sm-4 fw-bold">Reservation Time</dt>
                <dd class="col-sm-8">@Model.ReservationTime.ToString("g")</dd>
                <dt class="col-sm-4 fw-bold">Number of Guests</dt>
                <dd class="col-sm-8">@Model.NumberOfGuests</dd>
                <dt class="col-sm-4 fw-bold">Location</dt>
                <dd class="col-sm-8">@(Model.IsIndoor ? "Indoor" : "Outdoor")</dd>
                <dt class="col-sm-4 fw-bold">Table ID</dt>
                <dd class="col-sm-8">@Model.TableID</dd>
                <dt class="col-sm-4 fw-bold">Status</dt>
                <dd class="col-sm-8">@Model.Status</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="EditReservation" asp-route-id="@Model.ReservationID" class="btn btn-primary" aria-label="Edit reservation">Edit</a>
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#cancelModal" aria-label="Cancel reservation">Cancel</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" aria-label="Delete reservation">Delete</button>
            <a asp-action="ShowAllReservations" class="btn btn-secondary ms-auto" aria-label="Back to all reservations">Back to List</a>
        </div>
    </div>

    <!-- Cancel Modal -->
    <div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelModalLabel">Confirm Cancellation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to cancel this reservation?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <form asp-action="CancelReservation" asp-route-id="@Model.ReservationID" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning">Confirm Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this reservation? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <form asp-action="DeleteReservation" asp-route-id="@Model.ReservationID" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>