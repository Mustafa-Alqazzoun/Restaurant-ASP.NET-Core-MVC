@model List<Final_Project.ViewModels.MakeReservation>

@{
    ViewData["Title"] = "ShowAllReservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="reservation-container">
                    <div class="header-section">
                        <h2 class="page-title">
                            <i class="fas fa-list-alt"></i>
                            All Reservations
                        </h2>
                        <div class="title-underline"></div>
                    </div>

                    @if (Model.Any())
                    {
                        <div class="reservations-scroll-area">
                            @foreach (var reservation in Model)
                            {
                                <div class="reservation-card">
                                    <div class="card-header">
                                        <div class="reservation-id">
                                            <i class="fas fa-hashtag"></i>
                                            Reservation #@reservation.ReservationID
                                        </div>
                                        <div class="status-badge status-@reservation.Status.ToLower()">
                                            @reservation.Status
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="info-grid">
                                                    <div class="info-item">
                                                        <i class="fas fa-user text-primary"></i>
                                                        <div>
                                                            <span class="info-label">Customer</span>
                                                            <span class="info-value">@reservation.CustomerID</span>
                                                        </div>
                                                    </div>
                                                    <div class="info-item">
                                                        <i class="fas fa-clock text-success"></i>
                                                        <div>
                                                            <span class="info-label">Time</span>
                                                            <span class="info-value">@reservation.ReservationTime.ToString("MMM dd, yyyy hh:mm tt")</span>
                                                        </div>
                                                    </div>
                                                    <div class="info-item">
                                                        <i class="fas fa-users text-info"></i>
                                                        <div>
                                                            <span class="info-label">Guests</span>
                                                            <span class="info-value">@reservation.NumberOfGuests</span>
                                                        </div>
                                                    </div>
                                                    <div class="info-item">
                                                        <i class="fas fa-@(reservation.IsIndoor ? "home" : "tree") text-warning"></i>
                                                        <div>
                                                            <span class="info-label">Location</span>
                                                            <span class="info-value">@(reservation.IsIndoor ? "Indoor" : "Outdoor")</span>
                                                        </div>
                                                    </div>
                                                    <div class="info-item">
                                                        <i class="fas fa-utensils text-danger"></i>
                                                        <div>
                                                            <span class="info-label">Table</span>
                                                            <span class="info-value">#@reservation.TableID</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 d-flex flex-column justify-content-center">
                                                <div class="action-buttons">
                                                    <a asp-action="Details" asp-route-id="@reservation.ReservationID" class="btn btn-info btn-sm mb-2">
                                                        <i class="fas fa-eye"></i> Details
                                                    </a>
                                                    <form asp-action="CancelReservation" asp-route-id="@reservation.ReservationID" method="post" class="mb-2" onsubmit="return confirm('Cancel this reservation?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-warning btn-sm w-100">
                                                            <i class="fas fa-ban"></i> Cancel
                                                        </button>
                                                    </form>
                                                    <form asp-action="DeleteReservation" asp-route-id="@reservation.ReservationID" method="post" onsubmit="return confirm('Delete this reservation?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger btn-sm w-100">
                                                            <i class="fas fa-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="no-reservations-message">
                            <div class="empty-state">
                                <i class="fas fa-calendar-times"></i>
                                <h4>No Reservations Found</h4>
                                <p>Start by creating your first reservation!</p>
                            </div>
                        </div>
                    }

                    <div class="bottom-actions">
                        <a asp-action="AddReservation" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-plus"></i> Add New Reservation
                        </a>
                        <a asp-action="FindNearestBranch" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-map-marker-alt"></i> Find Nearest Branch
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-wrapper {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=1920&auto=format&fit=crop') center/cover fixed;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .reservation-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .header-section {
        text-align: center;
        margin-bottom: 2rem;
    }

    .page-title {
        color: #2c3e50;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

        .page-title i {
            color: #e67e22;
            margin-right: 1rem;
        }

    .title-underline {
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, #e67e22, #f39c12);
        margin: 0 auto;
        border-radius: 2px;
    }

    .reservations-scroll-area {
        max-height: 600px;
        overflow-y: auto;
        padding-right: 15px;
        margin-bottom: 2rem;
    }

        .reservations-scroll-area::-webkit-scrollbar {
            width: 12px;
        }

        .reservations-scroll-area::-webkit-scrollbar-track {
            background: rgba(240, 240, 240, 0.8);
            border-radius: 10px;
        }

        .reservations-scroll-area::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, #e67e22, #f39c12);
            border-radius: 10px;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

            .reservations-scroll-area::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(180deg, #d35400, #e67e22);
            }

    .reservation-card {
        background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
        border: none;
        border-radius: 15px;
        margin-bottom: 1.5rem;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

        .reservation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

    .card-header {
        background: linear-gradient(135deg, #D2B48C, #DEB887 100%);
        color: white;
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .reservation-id {
        font-weight: 600;
        font-size: 1.1rem;
    }

        .reservation-id i {
            margin-right: 0.5rem;
            color: #e67e22;
        }

    .status-badge {
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-confirmed {
        background: linear-gradient(135deg, #27ae60, #2ecc71);
        color: white;
    }

    .status-pending {
        background: linear-gradient(135deg, #f39c12, #e67e22);
        color: white;
    }

    .status-cancelled {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
    }

    .card-body {
        padding: 2rem 1.5rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        padding: 0.8rem;
        background: rgba(255, 255, 255, 0.7);
        border-radius: 10px;
        transition: all 0.2s ease;
    }

        .info-item:hover {
            background: rgba(255, 255, 255, 0.9);
            transform: scale(1.02);
        }

        .info-item i {
            font-size: 1.2rem;
            margin-right: 1rem;
            width: 20px;
            text-align: center;
        }

    .info-label {
        display: block;
        font-size: 0.8rem;
        color: #7f8c8d;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        display: block;
        font-size: 1rem;
        color: #2c3e50;
        font-weight: 600;
        margin-top: 0.2rem;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        padding: 0.6rem 1.2rem;
        transition: all 0.3s ease;
        border: none;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.85rem;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .btn-info {
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f39c12, #e67e22);
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
    }

    .no-reservations-message {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-state {
        background: rgba(255, 255, 255, 0.8);
        padding: 3rem;
        border-radius: 20px;
        border: 2px dashed #bdc3c7;
    }

        .empty-state i {
            font-size: 4rem;
            color: #bdc3c7;
            margin-bottom: 1.5rem;
        }

        .empty-state h4 {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .empty-state p {
            color: #7f8c8d;
            font-size: 1.1rem;
        }

    .bottom-actions {
        text-align: center;
        padding-top: 2rem;
        border-top: 2px solid rgba(230, 126, 34, 0.2);
    }

    .btn-primary {
        background: linear-gradient(135deg, #e67e22, #f39c12);
        color: white;
        box-shadow: 0 10px 30px rgba(230, 126, 34, 0.3);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #d35400, #e67e22);
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(230, 126, 34, 0.4);
        }

    .btn-outline-light {
        border: 2px solid white;
        color: white;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

        .btn-outline-light:hover {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border-color: white;
        }

    /* Responsive adjustments */
    (max-width: 768px) {
        .page-wrapper

    {
        padding: 1rem 0;
    }

    .reservation-container {
        padding: 1.5rem;
        margin: 0 1rem;
        border-radius: 15px;
    }

    .page-title {
        font-size: 2rem;
    }

    .reservations-scroll-area {
        max-height: 400px;
    }

    .info-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .action-buttons {
        margin-top: 1.5rem;
    }

    .bottom-actions .btn {
        display: block;
        width: 100%;
        margin-bottom: 1rem;
    }

    .card-header {
        flex-direction: column;
        gap: 0.5rem;
        text-align: center;
    }

    }
</style>