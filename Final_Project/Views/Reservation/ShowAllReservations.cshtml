@model List<Final_Project.ViewModels.MakeReservation>

@{
    ViewData["Title"] = "ShowAllReservations";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use the same layout as AddReservation
}

<div class="form-container">
    <h2>All Reservations</h2>

    @if (Model.Any())
    {
        foreach (var reservation in Model)
        {
            <div class="reservation-card">
                <div class="card-body">
                    <p class="card-text"><strong>Reservation ID:</strong> @reservation.ReservationID</p>
                    <p class="card-text"><strong>Customer ID:</strong> @reservation.CustomerID</p>
                    <p class="card-text"><strong>Reservation Time:</strong> @reservation.ReservationTime.ToString("g")</p>
                    <p class="card-text"><strong>Number of Guests:</strong> @reservation.NumberOfGuests</p>
                    <p class="card-text"><strong>Location:</strong> @(reservation.IsIndoor ? "Indoor" : "Outdoor")</p>
                    <p class="card-text"><strong>Table ID:</strong> @reservation.TableID</p>
                    <p class="card-text"><strong>Status:</strong> @reservation.Status</p>
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@reservation.ReservationID" class="btn btn-info" aria-label="View details for reservation @reservation.ReservationID">Details</a>
                    <form asp-action="CancelReservation" asp-route-id="@reservation.ReservationID" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning" aria-label="Cancel reservation @reservation.ReservationID">Cancel</button>
                    </form>
                    <form asp-action="DeleteReservation" asp-route-id="@reservation.ReservationID" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" aria-label="Delete reservation @reservation.ReservationID">Delete</button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <p class="no-reservations">No reservations found.</p>
        </div>
    }

    <div class="action-buttons">
        <a asp-action="AddReservation" class="btn btn-primary" aria-label="Add new reservation">Add New Reservation</a>
        <a asp-action="FindNearestBranch" class="btn btn-primary" aria-label="Find nearest branch">Find Nearest Branch</a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.btn-primary').on('click', function () {
                console.log('Button clicked: ' + $(this).text());
            });
        });
    </script>
}

