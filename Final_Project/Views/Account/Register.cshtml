@model Final_Project.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/res.css">

<div class="overlay d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="auth-card col-md-3 p-3 rounded" style="background: #FFF8F0;">
        <h3 class="text-center mb-3">Create Your Account</h3>
        <form asp-action="Register" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <div class="mb-2">
                <label asp-for="Username" class="form-label"><i class="fas fa-user"></i> Username</label>
                <input asp-for="Username" class="form-control form-control-sm" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Password" class="form-label"><i class="fas fa-lock"></i> Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-sm" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Name" class="form-label"><i class="fas fa-id-card"></i> Full Name</label>
                <input asp-for="Name" class="form-control form-control-sm" placeholder="Enter your full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="ContactNumber" class="form-label"><i class="fas fa-phone"></i> Contact Number</label>
                <input asp-for="ContactNumber" class="form-control form-control-sm" placeholder="Enter your contact number" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Email" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Address" class="form-label"><i class="fas fa-map-marker-alt"></i> Address</label>
                <input asp-for="Address" class="form-control form-control-sm" placeholder="Enter your address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Gender" class="form-label"><i class="fas fa-venus-mars"></i> Gender</label>
                <select asp-for="Gender" class="form-select form-select-sm">
                    <option value="">Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                  
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="DateOfBirth" class="form-label"><i class="fas fa-calendar-alt"></i> Date of Birth</label>
                <input asp-for="DateOfBirth" type="date" class="form-control form-control-sm" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-restaurant btn-sm">Register</button>
            </div>
        </form>

        <div class="text-center mt-3" style="font-size: 0.9rem;">
            Already have an account? <a asp-action="Login" asp-controller="Account">Login here</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
